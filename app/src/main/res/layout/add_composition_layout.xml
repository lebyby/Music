<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/enter_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_surname"
        android:textColorHint="@color/colorBorder"
        android:textSize="12dp"
        android:inputType="text"
        android:background="@drawable/brown_border"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/enter_forename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_forename"
        android:textColorHint="@color/colorBorder"
        android:layout_marginTop="24dp"
        android:textSize="12dp"
        android:inputType="text"
        android:background="@drawable/brown_border"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/enter_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_role"
        android:textColorHint="@color/colorBorder"
        android:layout_marginTop="24dp"
        android:textSize="12dp"
        android:inputType="text"
        android:background="@drawable/brown_border"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:padding="12dp"/>

</LinearLayout>
